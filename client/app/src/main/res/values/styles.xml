<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textAppearanceLarge">@style/TextAppearance.AppTheme.Large</item>
        <item name="cardViewStyle">@style/Widget.AppTheme.CardView</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@color/glovo_yellow</item>
    </style>

    <style name="Widget.AppTheme.CardView" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/glovo_yellow</item>
    </style>

    <style name="TextAppearance.AppTheme.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
